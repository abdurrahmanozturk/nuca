{
  "scopeName": "source.serpent",
  "name": "SERPENT",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.percent.serpent",
          "match": "^%.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.serpent",
          "match": "\\b(set|mat|surf|cell|lat|uni|depl|plot)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.serpent",
          "match": "\\b[0-9]+(\\.[0-9]+)?(E[+-]?[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.serpent",
          "match": "="
        }
      ]
    }
  },
  "fileTypes": ["serp", "inp"],
  "uuid": "64c8a6f0-fb90-11ee-8c99-0242ac120002"
}
